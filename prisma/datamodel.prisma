type User {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  email: String! @unique
  password: String!
  vendors: [Vendor!]!
  customers: [Customer!]!
  accounts: [Account!]!
}

type Vendor {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  contact: String!
  address: String!
  addressTwo: String!
  city: String!
  state: String!
  country: String!
  postedBy: User
  bills: [Bill]
}

type Customer {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  contact: String!
  postedBy: User
}

type Bill {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  vendor: String!
  date: String!
  account: String!
  amount: Int!
  postedBy: User
  vendorId: Vendor
  accountId: Account
}

type Invoice {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  customer: String!
  date: String!
  account: String!
  amount: Int!
  postedBy: User
}

type Account {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  name: String!
  number: String!
  postedBy: User
  bills: [Bill]
}
